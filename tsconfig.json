{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "ts-node": {
        "esm": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "__test__"]
}
